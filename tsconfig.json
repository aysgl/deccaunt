{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "useDefineForClassFields": true,
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "outDir": "dist",
        "declaration": false,
        "lib": ["DOM", "ESNext"],
        "types": ["vite/client"],
        "noImplicitAny": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/vite-env.d.ts",
        "src/i18n.js"
    ],
    "exclude": ["node_modules", "dist"]
}
